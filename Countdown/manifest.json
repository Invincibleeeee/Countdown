{
    "manifest_version": 3,
    "name": "Countdown Calendar",
    "version": "1.0",
    "description": "A countdown and calendar extension.",
    "permissions": ["storage"],
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "newtab.html",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
